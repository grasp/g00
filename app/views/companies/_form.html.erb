
<%= form_for(@company,:as=>:company,:html => {:class => "horizontal-form"}) do |f| %>
  <% if @company.errors.any? %>
    <div id="error_explanation">
      <h4><%= pluralize(@company.errors.count, "error") %></h4>
      <ul>
      <% @company.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <fieldset class="control-group">
    <%= f.label "商家名称*",{:class=>"control-label"} %>
    <div class="controls"><%= f.text_field :name %>  </div>
  </fieldset>

  <fieldset class="control-group">
    <%= f.label "商家介绍*" ,{:class=>"control-label"}%>
    <div class="controls"> <%= f.text_area :about,:class=>"xxlarge" %></div>
</fieldset>
  <fieldset class="control-group">
    <%= f.label "商家类型*" ,{:class=>"control-label"}%>
     <div class="controls">     <%= f.select(:ctype,options_for_select(
     [["国内陆运公司","国内陆运公司"],
    ["物流个体","物流个体"],
   ["配货信息部","配货信息部"],
  ["配货站点","配货站点"],
  ["货主企业" ,"货主企业"],
 ["仓储仓库","仓储仓库"],
 ["物流园区","物流园区"],
 ["停车场", "停车场"],
 ["铁路运输","铁路运输"],
 ["海路运输","海路运输"],
 ["内河运输","内河运输"],
 ["航空运输","航空运输"],
 ["国际物流","国际物流"],
 ["快递公司","快递公司"],
 ["物流设备","物流设备"],
 ["搬家服务","搬家服务"],
 ["其他物流类","其他物流类"]],@company.ctype) )%> </div>
</fieldset>




    <fieldset class="control-group">
    <%= f.label :员工数量 ,{:class=>"control-label"}%>
    <div class="controls"><%= f.text_field :num_employ %>  </div>
   </fieldset>

  <fieldset class="control-group">
    <%= f.label :自有车辆 ,{:class=>"control-label"}%>
    <div class="controls"><%= f.text_field :self_che %>  </div>
 </fieldset>
