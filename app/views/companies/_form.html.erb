<h3>公司的联系信息 </h3>
<fieldset class="control-group">
    <%= f.label "联系人*" ,{:class=>"control-label"}%>
    <div class="controls"><%= f.text_field :contact_name %>  </div>
</fieldset>


<fieldset class="control-group">

  <!-- do not change below  format -->
      <label class="line_from_label">所在城市*:</label>
      <div class="controls">    <a id="from_data_load"  class="company_city" href="/cities/from"><%=@company.city_name ||"选择"%></a> 
              <%= f.hidden_field(:city_code) %>
      <%= f.hidden_field(:city_name) %>
      </div>

</fieldset>

  <fieldset class="control-group">
    <%= f.label "商家地址*",{:class=>"control-label"} %>
    <div class="controls"><%= f.text_field :address %>  </div>
  </fieldset>

  <fieldset class="control-group">
    <label class="control-label" style="width:130px;">固定电话区号:</label>
     <div class="controls"> <input  style="width:50px;" id="quhao" name="company[quhao]" type="text" value=<%=@company.quhao%> > </input>  </div>
</fieldset>
     <fieldset class="control-group">
        <label class="control-label" style="width:130px;">固定电话号码:</label>
   <div class="controls">  <input  style="width:150px;" id="companyfix_phone" name="company[fix_phone]" type="text" value=<%=@company.fix_phone%> > </input> </div>
     <%#= f.text_field :fix_phone %>
</fieldset>

  <fieldset class="control-group">
    <%= f.label "联系人移动电话*",{:class=>"control-label"} %>
    <div class="controls" ><%= f.text_field :mobile_phone %> </div>
 </fieldset>

  <fieldset class="control-group">
    <%= f.label :联系人email ,{:class=>"control-label"}%>
    <div class="controls"><%= f.text_field :email %></div>
</fieldset>
<%= f.hidden_field :user_id %>
<%= f.hidden_field :user_name %>
<%= f.hidden_field(:ispersonal) %>
  <div class="form-actions">
    <%= f.submit("确定",:class=>"btn primary")%>
  </div>



<% end %>

<p id="notice"><%= notice %></p>

